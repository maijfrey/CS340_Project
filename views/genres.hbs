<!DOCTYPE html>
<html>
<head>
    <title>Movie Database Website</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>

{{! Nav and Search Bar}}
<header>
    <h2 class="p-3">Movie Information Database</h2>
    <nav class="navbar nav-pills navbar-expand-sm bg-light">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 p-2">
            <li class="nav-item">
                <a class="nav-link" href="/">Movies</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link" href="actors.hbs">Actors</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link" href="directors.hbs">Directors</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="genres.hbs">Genres</a> 
            </li>
            <li class="nav-item">
                <a class="nav-link" href="movies_actors.hbs">Movie Actors</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="movies_genres.hbs">Movie Genres</a>
            </li>
        </ul>
        <form class="navbar-form navbar-left row" id="search-genre-html" method='GET' action='/genres.hbs'>
            <div class="col">
                <input placeholder="Search Genre Name" class="form-control" type="text" name="search" id="search-genre-name" required>
            </div>
            <div class="col align-self-end">
                <input type="submit" class="btn btn-primary">
                <a class="btn btn-secondary" href="genres.hbs">Reset</a>
            </div>
        </form>
    </nav>
</header>

{{! Table Construction}}

<body>
    <table id="genres-table" class="table table-hover ">
        <thead>
            <tr>
                <th id="delete-button">Delete</th>
                <th>Genre Name</th>
            </tr>
        </thead>
        <tbody>

            {{#each data}}
            <tr data-value={{this.genreID}}>
                <td><button class="btn btn-danger" onclick="deleteGenre({{this.genreID}})">Delete</button></td>
                <td>{{this.name}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

  {{! Insert Functionality}}

    <div class="row p-4">
        <div class="container-fluid p-3 border col">
            <h3>Add a New Genre</h3>
            <p>Please add an Genre name below and submit!</p>
            <form id="add-genre-form-ajax">
                <div class="row">
                    <div class="col">
                        <label for="input-genre-name">Genre Name: </label>
                        <input class="form-control lg-4" type="text" name="input-genre-name" id="input-genre-name">
                    </div>
                    <div class="col align-self-end">
                        <input  type="submit" class="btn btn-primary ">
                        <input type="reset" class="btn btn-secondary">
                    </div>
                </div>
            </form> 
        </div>

          {{! Update Functionality}}

        <div class="container-fluid p-3 border col">
            <h3>Update Genre</h3>
            <p>Please Update a Genre's name and press submit!</p>
            <form id="update-genre-form-ajax">
                <div class="row">
                    <div class="col">
                        <label for="update-genre-input-name">Genre Name: </label>
                        <select class="form-control" name="update-genre-input-name" id="update-genre-input-name">
                            <option value="">Select a Genre</option>
                            {{#each data}}
                            <option value="{{this.genreID}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col">
                        <label for="update-genre-output-name">New Name: </label>
                        <input class="form-control" type="text" name="update-genre-output-name" id="update-genre-output-name" required>
                    </div>
                    <div class="col align-self-end">
                        <input type="submit" class="btn btn-primary">
                        <a class="btn btn-secondary" href="genres.hbs">Reset</a>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>

      {{! Delete Functionality primarily in .js file}}
    <script src="./js/add_genre.js"></script>
    <script src="./js/delete_genre.js"></script>
    <script src="./js/update_genre.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>



</body>
</html>
